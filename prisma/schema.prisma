// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


// ============================================
// AUTH & USER MANAGEMENT
// ============================================

enum UserRole {
  ADMIN
  SUPER_ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          UserRole  @default(ADMIN)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  posts Post[]

  @@map("users")
}

// ============================================
// UNIT PENDIDIKAN (SMP, SMA, Tafaqquh, Tahfidz)
// ============================================

model Unit {
  id               String   @id @default(cuid())
  name             String   @unique // SMP, SMA, Tafaqquh, Tahfidz
  slug             String   @unique // smpiqu, smaiqu, tafaqquh, tahfidz
  description      String?  @db.Text // Deskripsi lengkap unit
  curriculum       String?  @db.Text // Kurikulum yang digunakan
  facilities       String?  @db.Text // Fasilitas yang tersedia (JSON atau text)
  registrationLink String?  // Link pendaftaran
  image            String?  // Gambar utama unit
  // Contact Information
  address          String?  @db.Text // Alamat lengkap
  email            String?  // Email kontak
  phone            String?  // Nomor telepon
  whatsapp         String?  // Nomor WhatsApp
  isActive         Boolean  @default(true)
  order            Int      @default(0) // Urutan tampilan
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  posts            Post[]
  galleries        Gallery[]
  psbRegistrations PSBRegistration[]
  socialMedia      UnitSocialMedia[]

  @@map("units")
}

// Social Media untuk setiap Unit
model UnitSocialMedia {
  id        String   @id @default(cuid())
  platform  String   // instagram, facebook, youtube, tiktok, whatsapp, twitter, etc
  url       String   // URL atau nomor (untuk whatsapp)
  label     String?  // Label kustom, misal "Instagram SMPIQu"
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  unitId    String
  unit      Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)

  @@index([unitId])
  @@map("unit_social_media")
}

// ============================================
// BERITA / ARTIKEL
// ============================================

enum PostCategory {
  BERITA        // Berita umum
  PENGUMUMAN    // Pengumuman resmi
  KEGIATAN      // Kegiatan pesantren
  PRESTASI      // Prestasi santri/unit
  ARTIKEL       // Artikel/tulisan
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Post {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  content     String       @db.Text // Rich text content dari Tiptap
  excerpt     String?      @db.Text // Ringkasan singkat
  image       String?      // Thumbnail/featured image
  category    PostCategory @default(BERITA)
  status      PostStatus   @default(DRAFT)
  publishedAt DateTime?
  featured    Boolean      @default(false) // Berita unggulan
  viewCount   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  authorId String?
  author   User?   @relation(fields: [authorId], references: [id], onDelete: SetNull)

  unitId String?
  unit   Unit?   @relation(fields: [unitId], references: [id], onDelete: SetNull)

  // Gallery images for this post
  images PostImage[]

  @@index([status, publishedAt])
  @@index([category])
  @@index([unitId])
  @@map("posts")
}

// Galeri Foto Kegiatan untuk Berita
model PostImage {
  id          String   @id @default(cuid())
  imageUrl    String   // URL gambar dari Cloudinary
  caption     String?  // Caption untuk gambar
  order       Int      @default(0) // Urutan tampilan
  createdAt   DateTime @default(now())

  // Relation to Post
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@map("post_images")
}

// ============================================
// PROGRAM DONASI / INFAQ
// ============================================

model DonationProgram {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  description   String   @db.Text // Deskripsi program donasi
  image         String?  // Gambar program
  targetAmount  Decimal  @db.Decimal(15, 2) // Target donasi
  currentAmount Decimal  @default(0) @db.Decimal(15, 2) // Jumlah terkumpul
  bankName      String   // Nama bank
  accountNumber String   // Nomor rekening
  accountName   String?  // Nama pemilik rekening
  isActive      Boolean  @default(true)
  isFeatured    Boolean  @default(false)
  hideProgress  Boolean  @default(false)
  categoryLabel String?  // Label kustom jika progress disembunyikan (misal: "Infaq Operasional")
  startDate     DateTime @default(now())
  endDate       DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Gallery images for this donation program
  images        DonationProgramImage[]

  @@index([isActive])
  @@map("donation_programs")
}

// Galeri Foto untuk Program Donasi
model DonationProgramImage {
  id          String   @id @default(cuid())
  imageUrl    String   // URL gambar dari Cloudinary
  caption     String?  // Caption untuk gambar
  order       Int      @default(0) // Urutan tampilan
  createdAt   DateTime @default(now())

  // Relation to DonationProgram
  programId   String
  program     DonationProgram @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
  @@map("donation_program_images")
}

// ============================================
// GALERI FOTO
// ============================================

model Gallery {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String   // URL gambar dari Uploadthing
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Optional relation to Unit
  unitId String?
  unit   Unit?   @relation(fields: [unitId], references: [id], onDelete: SetNull)

  @@index([unitId])
  @@index([isActive])
  @@map("galleries")
}

// ============================================
// PENGATURAN WEBSITE
// ============================================

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// ============================================
// MAJELIS RUTIN (Kegiatan Rutin Mingguan)
// ============================================

model Majelis {
  id          String   @id @default(cuid())
  title       String   // Nama kegiatan, misal "Jalsah Itsnain"
  subtitle    String?  // Deskripsi singkat, misal "Majelis Rasulullah SAW"
  teacher     String?  // Pengajar, misal "Abah Sayf Abu Hanifah"
  schedule    String   // Jadwal, misal "Senin Malam Selasa"
  time        String   // Waktu, misal "18.30 WIB (Ba'da Maghrib)"
  location    String?  // Lokasi, misal "Masjid Al-Bahjah Buyut"
  order       Int      @default(0) // Urutan tampilan
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("majelis")
}

// ============================================
// PSB (PENERIMAAN SANTRI BARU)
// ============================================

enum PSBStatus {
  PENDING     // Menunggu verifikasi
  VERIFIED    // Berkas lengkap & valid
  ACCEPTED    // Diterima
  REJECTED    // Ditolak
}

model PSBRegistration {
  id                String    @id @default(cuid())
  registrationNumber String   @unique // Nomor pendaftaran otomatis
  
  // Data Pribadi Calon Santri
  namaLengkap       String
  nisn              String?
  nik               String?   // NIK Calon Santri
  noKK              String?   // Nomor Kartu Keluarga
  jenisKelamin      String    // L / P
  tempatLahir       String
  tanggalLahir      DateTime
  asalSekolah       String
  alamatSekolahAsal String?   @db.Text // Alamat sekolah asal
  
  // Data Orang Tua / Wali
  namaAyah          String?
  namaIbu           String?
  pekerjaanAyah     String?
  pekerjaanIbu      String?
  penghasilanAyah   String?
  penghasilanIbu    String?
  pendidikanAyah    String?
  pendidikanIbu     String?
  anakKe            String?
  dariSaudara       String?
  jumlahTanggungan  String?
  alamatLengkap     String    @db.Text // Alamat rumah orang tua
  noWaIbu           String?
  noWaAyah          String?
  sumberInfo        String?   // Tau Al Bahjah Buyut dari mana
  grade             String?   // Grade A atau Grade B
  jenisSantri       String?   // Santri Umum atau Santri Lanjutan
  
  // Legacy fields (untuk backward compatibility)
  namaOrangTua      String?   // Deprecated: gunakan namaAyah/namaIbu
  noHpOrangTua      String?   // Deprecated: gunakan noWaIbu/noWaAyah
  emailOrangTua     String?
  
  // Status & Metadata
  status            PSBStatus @default(PENDING)
  notes             String?   @db.Text // Catatan admin
  
  // Google Drive folder for this registration
  driveFolderId     String?   // ID folder di Google Drive
  driveFolderUrl    String?   // URL folder di Google Drive
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  unitId            String
  unit              Unit      @relation(fields: [unitId], references: [id], onDelete: Cascade)
  documents         PSBDocument[]
  
  @@index([unitId])
  @@index([status])
  @@index([registrationNumber])
  @@map("psb_registrations")
}


model PSBDocument {
  id              String   @id @default(cuid())
  documentType    String   // IJAZAH, AKTA_KELAHIRAN, KARTU_KELUARGA, PAS_FOTO, KTP_ORTU
  fileName        String   // Nama file asli
  fileSize        Int      // Ukuran file dalam bytes
  mimeType        String   // image/jpeg, application/pdf, etc
  
  // Google Drive info
  driveFileId     String   // ID file di Google Drive
  driveFileUrl    String   // URL file di Google Drive
  
  createdAt       DateTime @default(now())
  
  // Relations
  registrationId  String
  registration    PSBRegistration @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  
  @@index([registrationId])
  @@index([documentType])
  @@map("psb_documents")
}

// ============================================
// SITE SETTINGS
// ============================================

model SiteSetting {
  id          String   @id @default(cuid())
  key         String   @unique // maintenance_mode, site_title, etc
  value       String   @db.Text // JSON value
  description String?
  updatedAt   DateTime @updatedAt
  updatedBy   String?  // User ID who last updated

  @@map("site_settings")
}

// ============================================
// UNIT USAHA (AB Travel, AB Mart, AB Fashion)
// ============================================

model BusinessUnit {
  id          String   @id @default(cuid())
  name        String   // AB Travel, AB Mart, AB Fashion
  slug        String   @unique // ab-travel, ab-mart, ab-fashion
  description String?  @db.Text // Deskripsi unit usaha
  services    String?  @db.Text // Layanan yang tersedia (rich text)
  address     String?  @db.Text // Alamat unit usaha
  phone       String?  // Nomor telepon
  whatsapp    String?  // Nomor WhatsApp
  email       String?  // Email
  website     String?  // Website
  mapUrl      String?  // URL Google Maps embed
  image       String?  // Gambar utama
  logo        String?  // Logo unit usaha
  isActive    Boolean  @default(true)
  order       Int      @default(0) // Urutan tampilan
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Gallery images
  images      BusinessUnitImage[]

  @@map("business_units")
}

// Galeri Foto untuk Unit Usaha
model BusinessUnitImage {
  id          String   @id @default(cuid())
  imageUrl    String   // URL gambar dari Cloudinary
  caption     String?  // Caption untuk gambar
  order       Int      @default(0) // Urutan tampilan
  createdAt   DateTime @default(now())

  // Relation to BusinessUnit
  businessUnitId String
  businessUnit   BusinessUnit @relation(fields: [businessUnitId], references: [id], onDelete: Cascade)

  @@index([businessUnitId])
  @@map("business_unit_images")
}
